<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/grad_start"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:fontFamily="@font/dinpro_medium"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textColorHint="@color/grad_start"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your name"
                    android:fontFamily="@font/dinpro"
                    android:textColorHint="@color/grad_end"
                    android:textColor="@color/grad_start"
                    android:backgroundTint="@color/grad_start"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textColorHint="@color/grad_start"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/signup_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Choose a unique username"
                    android:fontFamily="@font/dinpro"
                    android:textColorHint="@color/grad_end"
                    android:textColor="@color/grad_start"
                    android:backgroundTint="@color/grad_start"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textColorHint="@color/grad_start"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/signup_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your contact number"
                    android:fontFamily="@font/dinpro"
                    android:inputType="phone"
                    android:textColorHint="@color/grad_end"
                    android:textColor="@color/grad_start"
                    android:backgroundTint="@color/grad_start"
                    />

            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/signup_radio_group"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register as: "
                    android:textSize="18sp"
                    android:textColor="@color/grad_start"/>
                <RadioButton
                    android:id="@+id/signup_stud_rbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textColor="@color/grad_start"
                    android:buttonTint="@color/grad_end"
                    android:foregroundTint="@color/grad_start"
                    android:backgroundTint="@color/grad_start"/>
                <RadioButton
                    android:id="@+id/signup_teacher_rbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grad_start"
                    android:buttonTint="@color/grad_end"
                    android:foregroundTint="@color/grad_start"
                    android:backgroundTint="@color/grad_start"/>

            </RadioGroup>


            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textColorHint="@color/grad_start"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your E-mail ID"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/dinpro"
                    android:textColorHint="@color/grad_end"
                    android:textColor="@color/grad_start"
                    android:backgroundTint="@color/grad_start"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textColorHint="@color/grad_start"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter the password"
                    android:fontFamily="@font/dinpro"
                    android:inputType="textPassword"
                    android:textColorHint="@color/grad_end"
                    android:textColor="@color/grad_start"
                    android:backgroundTint="@color/grad_start"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textColorHint="@color/grad_start"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/signup_conpassword"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Confirm password"
                    android:fontFamily="@font/dinpro"
                    android:textColorHint="@color/grad_end"
                    android:textColor="@color/grad_start"
                    android:backgroundTint="@color/grad_start"
                    />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_signup_proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_stroke"
                android:paddingBottom="12dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:text="Sign up"
                android:textColor="@color/grad_start"
                android:textSize="18dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="35dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>